{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "server/**/*",
    "common/**/*"
  ],
  "exclude": [
    "**/*.test.ts*",
    "mocks/**/*.ts*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "vite/client"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [
      "./app",
      "./.react-router/types"
    ],
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}